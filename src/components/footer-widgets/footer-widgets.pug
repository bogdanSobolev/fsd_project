include __widget-list/footer-widgets__widget-list
include __widget-subscribe/footer-widgets__widget-subscribe

mixin footer-widgets()
    .footer-widgets(class!=attributes.class)
        .footer-widgets__logo-n-info.footer-widgets__item
            include ../logo/logo
            p.footer-widgets__info 
                |Бронирование номеров в лучшем отеле 2019 
                |года по версии ассоциации «Отельные взгляды»
        +__widgets-list("навигация", {
            "О нас": "#",
            "Новости": "#",
            "Служба поддержки": "#",
            "Услуги": "#"
        })(class="footer-widgets__item footer-widgets__nav footer-widgets__item-short")
        +__widgets-list("о нас", {
            "О сервисе": "#",
            "Наша команда": "#",
            "Вакансии": "#",
            "Инвесторы": "#"
        })(class="footer-widgets__item footer-widgets__about-us footer-widgets__item-short")
        +__widgets-list("служба поддержки", {
            "Соглашения": "#",
            "Сообщества": "#",
            "Связь с нами": "#"
        })(class="footer-widgets__item footer-widgets__support footer-widgets__item-short")
        +__widget-subscribe("Подписка")(class="footer-widgets__item")