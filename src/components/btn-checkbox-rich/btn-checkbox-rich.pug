mixin btn-checkbox-rich(options)
    - let checkedBtn = false

    if options
        if options.checkedBtn
            checkedBtn = options.checkedBtn


    label.btn-checkbox-rich
        input.btn-checkbox-rich__input(type="checkbox", name=options.name, checked=checkedBtn)
        .btn-checkbox-rich__checkbox
            <svg class="btn-checkbox-rich__check-mark" width="10" height="9" viewBox="0 0 10 9" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M1.46439 2.40768L5.70703 6.65032L4.29282 8.06453L0.0501771 3.82189L1.46439 2.40768Z" fill="url(#paint0)"/>
                <path d="M8.53546 0.993466L9.94967 2.40768L4.29282 8.06453L2.8786 6.65032L8.53546 0.993466Z" fill="url(#paint1)"/>
                <defs>
                    <linearGradient id="paint0" x1="7.82835" y1="0.286359" x2="2.1715" y2="5.94321" gradientUnits="userSpaceOnUse">
                        <stop offset="0" stop-color="#BC9CFF"/>
                        <stop offset="1" stop-color="#8BA4F9"/>
                    </linearGradient>
                    <linearGradient id="paint1" x1="7.82835" y1="0.286359" x2="2.1715" y2="5.94321" gradientUnits="userSpaceOnUse">
                        <stop offset="0" stop-color="#BC9CFF"/>
                        <stop offset="1" stop-color="#8BA4F9"/>
                    </linearGradient>
                </defs>
            </svg>
            
        .btn-checkbox-rich__text
            .btn-checkbox-rich__title= options.title
            .btn-checkbox-rich__description= options.description