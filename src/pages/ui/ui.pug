- let login = true;
include ../../components/footer-creative/footer-creative
include ../../components/text-field/text-field
include ../../components/subscription-form/subscription-form
include ../../components/date-dropdown/date-dropdown
include ../../components/calendar-field/calendar-field
include ../../components/dropdown/dropdown

<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title UI
    body
        .wrapper
            section.section-header.ui-section
                include ../../components/header/header
            - login = false;
            section.section-header.ui-section
                include ../../components/header/header
            section.section-footer.ui-section
                include ../../components/footer/footer
            section.section-footer-creative.ui-section
                +footer-creative()(class="section-footer-creative__elem footer-creative_mobile-for-desc")
            section.section-form-elements.ui-section.wrp-pd
                .section-form-elements__fields-list
                    .section-form-elements__field-block.section-form-elements__text-field-block
                        h3.section-form-elements__name-field.title.title_small Text Field
                        span.section-form-elements__state Default
                        +text-field("text-field-default", "Email", "email")(class="section-form-elements__field-input body-text")
                    .section-form-elements__field-block.section-form-elements__text-field-block-focus
                        h3.section-form-elements__name-field.title.title_small Text Field
                        span.section-form-elements__state Hover / Focus
                        +text-field("text-field-focus", "text", "text", "This is pretty awesome")(class="section-form-elements__field-input text-field_focus body-text")
                    .section-form-elements__field-block.section-form-elements__dropdown-block
                        h3.section-form-elements__name-field.title.title_small dropdown
                        +dropdown()(class="section-form-elements__dropdown dropdown_guests")
                    .section-form-elements__field-block.section-form-elements__text-date-field-block
                        h3.section-form-elements__name-field.title.title_small masked text field
                        +text-field("text-date-field", "")(class="section-form-elements__field-input body-text text-field_date-mask")
                    .section-form-elements__field-block.section-form-elements__email-field-block
                        h3.section-form-elements__name-field.title.title_small subscription text field
                        +subscription-form("body-text")(class="section-form-elements__field-input")
                    .section-form-elements__field-block.section-form-elements__date-dropdown-fields-block
                        .section-form-elements__date-dropdown 
                            h3.section-form-elements__name-field.title.title_small date dropdown
                                //- +date-dropdown("date-dropdown-field-default")(class="section-form-elements__field-input body-text")
                            +calendar-field('date-dropdown-field-default', false)(class="section-form-elements__field-input body-text calendar text-field_date-mask")
                        .section-form-elements__date-dropdown 
                            h3.section-form-elements__name-field.title.title_small date dropdown
                                //- +date-dropdown("date-dropdown-field-default")(class="section-form-elements__field-input body-text")
                            +calendar-field('date-dropdown-field-default', false, "19.08.2019")(class="section-form-elements__field-input body-text calendar text-field_date-mask")
                    .section-form-elements__field-block.section-form-elements__date-dropdown-filter-field-block
                        h3.section-form-elements__name-field.title.title_small filter date dropdown
                        +calendar-field('date-dropdown-filter-field-default', false, "19 авг - 23 авг")(class="section-form-elements__field-input body-text calendar calendar_range")
                .section-form-elements__dropdowns-location-list
                    .section-form-elements__field-block.section-form-elements__dropdown-block
                        h3.section-form-elements__name-field.title.title_small dropdown
                        span.section-form-elements__state Default
                        +dropdown()(class="section-form-elements__dropdown dropdown_location", data-values=[{name: "спальни", value: 2},{name:"кровати", value: 2}])
                    .section-form-elements__field-block.section-form-elements__dropdown-block
                        h3.section-form-elements__name-field.title.title_small dropdown
                        span.section-form-elements__state expanded
                        +dropdown()(class="section-form-elements__dropdown dropdown_location dropdown_active", data-values=[{name: "спальни", value: 2},{name:"кровати", value: 2}])
                .section-form-elements__dropdowns-guests-list
                    h3.section-form-elements__name-field.title.title_small dropdown
                    +dropdown()(class="section-form-elements__dropdown dropdown_guests")
                .section-form-elements__dropdowns-guests-list-expanded
                    h3.section-form-elements__name-field.title.title_small dropdown
                    +dropdown()(class="section-form-elements__dropdown dropdown_guests dropdown_active", data-values=[{name: "взрослые", value: 2},{name:"дети", value: 1}])
